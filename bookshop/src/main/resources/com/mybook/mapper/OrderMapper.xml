<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.mybook.mapper.OrderMapper">
<!-- 주문하기 -->
<insert id="insert">
insert into tbl_order(userid, order_rec, address1, address2, order_phone, order_payment, order_regdate)
 values(#{userid},#{order_rec},#{address1},#{address2}, #{order_phone}, #{order_payment}, now())
</insert>

<!-- 주문전체보기 -->
<select id="findAll" parameterType="java.util.Map" resultType="com.mybook.dto.Order">
select * from tbl_order
</select>
<select id="findById" parameterType="java.util.Map" resultType="com.mybook.dto.Order">
select * from tbl_order where userid=#{userid}
</select>

<!-- 주문취소하기 -->
<delete id="delete">
delete from tbl_order where order_id=#{order_id}
</delete>
</mapper>