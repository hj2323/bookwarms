<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.mybook.mapper.BooksAttachMapper">

<insert id="insert">
insert into tbl_attach(uuid, uploadpath, filename, filetype, book_id) values(#{uuid}, #{uploadPath}, #{filename}, #{filetype},#{book_id})
</insert>

<delete id="delete">
delete from tbl_attach where uuid = #{uuid}
</delete>

<select id="findByBookid" resultType="com.mybook.dto.BooksAttachVO">
select * from tbl_attach where book_id = #{book_id}
</select>
</mapper>